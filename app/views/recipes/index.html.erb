<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-xl font-bold text-slate-900">レシピ</h1>
      <p class="text-sm text-[var(--muted)] mt-1">材料を1人前で登録すると、献立で人数を変えて買い物リストを作れます。</p>
    </div>
  </div>

  <div class="soft-card px-4 py-3">
    <%= form_with url: recipes_path, method: :get, local: true, class: "flex items-center gap-3 w-full" do %>
      <div class="text-lg text-slate-400">🔍</div>
      <input
        type="text"
        name="q"
        value="<%= h(@query) %>"
        placeholder="レシピ名、材料で検索..."
        class="w-full bg-white rounded-xl px-4 py-2 border border-slate-200 text-sm focus:ring-[var(--brand)] focus:border-[var(--brand)] shadow-inner"
      />
      <button type="submit" class="hidden">検索</button>
    <% end %>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
    <% @recipes.each do |recipe| %>
      <div class="soft-card p-4 space-y-3 relative overflow-hidden">
        <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-orange-200 via-white to-indigo-200 opacity-60"></div>
        <div class="flex items-start gap-3">
          <div class="w-12 h-12 rounded-xl overflow-hidden border border-slate-100 shadow-inner bg-gradient-to-br from-orange-100 to-orange-200 flex items-center justify-center">
            <% if recipe.photo.attached? %>
              <%= image_tag recipe.photo.variant(resize_to_fill: [96, 96]), class: "w-full h-full object-cover" %>
            <% else %>
              <span class="text-2xl">🥘</span>
            <% end %>
          </div>
          <div class="flex-1">
            <div class="flex items-start justify-between gap-2">
              <div>
                <p class="font-bold text-slate-900 text-base leading-tight"><%= recipe.name %></p>
                <p class="text-xs text-[var(--muted)] mt-1">材料 <%= recipe.ingredients.size %> 件</p>
              </div>
              <div class="flex items-center gap-1 text-[11px] text-[var(--muted)] whitespace-nowrap">
                <span>更新</span>
                <span class="font-semibold text-slate-700"><%= l recipe.updated_at, format: :short %></span>
              </div>
            </div>
            <div class="mt-2 flex flex-wrap">
              <% recipe.ingredients.first(3).each do |ing| %>
                <span class="tag"><%= ing.name %></span>
              <% end %>
              <% remaining = recipe.ingredients.size - 3 %>
              <% if remaining > 0 %>
                <span class="tag">+<%= remaining %></span>
              <% end %>
            </div>
          </div>
        </div>
        <div class="flex items-center justify-end gap-2 pt-1">
          <%= link_to "編集", edit_recipe_path(recipe), class: "px-3 py-1 bg-[var(--brand)] text-white rounded-lg text-xs font-semibold shadow-sm hover:bg-[var(--brand-dark)]" %>
          <%= button_to "削除", recipe_path(recipe), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "px-3 py-1 border border-red-200 text-red-600 rounded-lg text-xs font-semibold hover:bg-red-50" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to new_recipe_path, class: "floating-add", aria: { label: "新規レシピ作成" } do %>
    <span class="floating-add__icon">+</span>
  <% end %>
</div>
