<div class="max-w-4xl mx-auto p-6 space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold"><%= @recipe.name %></h1>
      <% if @recipe.image_url.present? %>
        <p class="text-sm text-gray-600 mt-1">画像URL: <%= @recipe.image_url %></p>
      <% end %>
    </div>
    <div class="space-x-2">
      <%= link_to "編集", edit_recipe_path(@recipe), class: "px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <%= link_to "一覧へ戻る", recipes_path, class: "text-sm text-blue-700 underline" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-4">
    <h2 class="text-lg font-semibold mb-3">材料（1人前）</h2>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">食材名</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">数量</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">単位</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">調味料</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @recipe.ingredients.each do |ingredient| %>
          <tr>
            <td class="px-4 py-2"><%= ingredient.name %></td>
            <td class="px-4 py-2"><%= ingredient.quantity %></td>
            <td class="px-4 py-2"><%= ingredient.unit %></td>
            <td class="px-4 py-2"><%= ingredient.condiment? ? "はい" : "いいえ" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
